        <Style x:Key="FoodServiceStyle" TargetType="Button" BasedOn="{StaticResource ServiceStyle}">
            <Setter Property="Button.Background" Value="Orange" />
            <Setter Property="ContentTemplate" Value="{StaticResource foodContent}" />
        </Style>

        <Style x:Key="SportServiceStyle" TargetType="Button" BasedOn="{StaticResource ServiceStyle}">
            <Setter Property="Button.Background" Value="YellowGreen" />
            <Setter Property="ContentTemplate" Value="{StaticResource sportContent}" />
        </Style>

        <Style x:Key="PoolServiceStyle" TargetType="Button" BasedOn="{StaticResource ServiceStyle}">
            <Setter Property="Button.Background" Value="SkyBlue" />
            <Setter Property="ContentTemplate" Value="{StaticResource poolContent}" />
        </Style>

        <Style x:Key="SaunaServiceStyle" TargetType="Button" BasedOn="{StaticResource ServiceStyle}">
            <Setter Property="Button.Background" Value="MediumPurple" />
            <Setter Property="ContentTemplate" Value="{StaticResource saunaContent}" />
        </Style>


        <DataTemplate x:Key="reservationContent">
            <Grid>
                <TextBlock FontSize="15" FontWeight="Bold" Foreground="White" TextAlignment="Center" 
                           Margin="40 7 0 0"  HorizontalAlignment="Left">
                             <Run Text="Reservation №" />
                             <Run Text="{Binding DataContext.Number, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                </TextBlock>
                <Button Width="54" Height="37" HorizontalAlignment="Right" Foreground="White"
                                             Margin="0 -111 0 0" Background="{x:Null}" BorderBrush="Transparent"
                        materialDesign:ButtonAssist.CornerRadius="15"
                        Command="{Binding DataContext.SaveServicesCommand, RelativeSource={RelativeSource 
                                 AncestorType=Window}}">
                    <iconPacks:PackIconMaterial Kind="ContentSaveEdit" HorizontalAlignment="Center"  VerticalAlignment="Center"
                                             Width="22" Height="22"/>
                </Button>

                <StackPanel Orientation="Vertical" Margin="10 28 0 0">
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3">
                             <Run Text="Date: " />
                             <Run Text="{Binding DataContext.ReservationDate, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3">
                             <Run Text="Start Date: " />
                             <Run Text="{Binding DataContext.ArrivalDate, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3">
                             <Run Text="End Date: " />
                             <Run Text="{Binding DataContext.DepartureDate, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3">
                             <Run Text="Room: №" />
                             <Run Text="{Binding DataContext.Room, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3">
                             <Run Text="Reservator: " />
                             <Run Text="{Binding DataContext.Guests[0].Name, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                             <Run Text=" " />
                             <Run Text="{Binding DataContext.Guests[0].Surname, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3">
                             <Run Text="Manager: " />
                             <Run Text="{Binding DataContext.Manager, RelativeSource={RelativeSource 
                                 AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3">
                            <Run Text="Guests number: " />
                            <Run Text="{Binding DataContext.NumberOfPeople, RelativeSource={RelativeSource 
                                         AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="White" TextAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0 0 0 -3" >
                            <Run Text="Services number: " />
                            <Run Text="{Binding DataContext.ServicesNumber, RelativeSource={RelativeSource 
                                         AncestorType=materialDesign:Card}}" />
                    </TextBlock>
                </StackPanel>
                <TextBlock Margin="185 95 0 0" FontSize="24">Total Price</TextBlock>
                <iconPacks:PackIconUnicons Kind="DollarAlt" Margin="204 123 0 0" Width="24" Height="24"/>
                <TextBlock Margin="225 119 0 0" FontSize="22" Text="{Binding DataContext.TotalPrice, RelativeSource={RelativeSource 
                                         AncestorType=materialDesign:Card}}"/>
            </Grid>
        </DataTemplate>
        <Style x:Key="reservationStyle" TargetType="materialDesign:Card">
            <Setter Property="materialDesign:Card.Height" Value="150" />
            <Setter Property="materialDesign:Card.Width" Value="300" />
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="UniformCornerRadius" Value="20" />
        </Style>
        <Style x:Key="ReservationStyle" TargetType="materialDesign:Card" BasedOn="{StaticResource reservationStyle}">
            <Setter Property="materialDesign:Card.Background" Value="Gray" />
            <Setter Property="ContentTemplate" Value="{StaticResource reservationContent}" />
        </Style>
    </UserControl.Resources>

