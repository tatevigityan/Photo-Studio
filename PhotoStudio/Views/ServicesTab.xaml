        <materialDesign:DialogHost.DialogContent>
            <Grid>
                <Grid Name="GuestGrid" Width="500" Height="235" HorizontalAlignment="Center" Background="White">
                    <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" HorizontalAlignment="Center"  
                       FontFamily="Century Gothic" FontWeight="Bold" FontSize="30" 
                       Text="Service Membership" Margin="0 12 0 0"/>
                    <StackPanel Orientation="Vertical" Margin="0 50 0 0" HorizontalAlignment="Center" Width="400">
                        <Border Visibility="Visible" BorderBrush="#89000000" BorderThickness="1" CornerRadius="15" Margin="0 15 0 15">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="220" Height="95">
