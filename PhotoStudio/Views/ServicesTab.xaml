                                    <iconPacks:PackIconMaterial Kind="Update"  Margin="3 0 8 0" Height="15" Width="15" Foreground="#89000000" VerticalAlignment="Bottom"/>
                                    <xctk:IntegerUpDown Value="1" Width="140" Name="serviceDuration"
                                                        Increment="1" Maximum="30" Minimum="1"
                                                        BorderBrush="#89000000" Background="Transparent">
                                        <ii:Interaction.Triggers>
                                            <ii:EventTrigger EventName="ValueChanged">
                                                <ii:InvokeCommandAction Command="{Binding DataContext.UpdatePriceCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                                            </ii:EventTrigger>
                                        </ii:Interaction.Triggers>
                                    </xctk:IntegerUpDown>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Left" Margin="18 0 0 0">
                                    <iconPacks:PackIconUnicons Kind="DollarAlt"   VerticalAlignment="Center" Margin="10,0,10,0" Width="18" Height="18" Foreground="#89000000"/>
                                    <TextBlock Text="{Binding DataContext.MembershipPrice, RelativeSource={RelativeSource AncestorType=Window}}"  FontSize="17"  Margin="-2 2 0 0"/>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 7 0 12">
                        <Button Name="CloseDialogButton" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                Margin="7 0 0 0" Style="{StaticResource MaterialDesignRaisedButton}" Background="white" materialDesign:ButtonAssist.CornerRadius="20" Height="40" Width="100" BorderBrush="{x:Null}" Foreground="Purple">
                            <TextBlock Text="Cancel" FontSize="14" Foreground="Purple" TextAlignment="Center" />
                        </Button>
                        <Button Name="CreateButton" Command="{Binding DataContext.CreateMembershipCommand, RelativeSource={RelativeSource AncestorType=Window}}"  
                        CommandParameter="{Binding}"
